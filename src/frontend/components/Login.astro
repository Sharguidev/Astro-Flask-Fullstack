        type="password"
        class="form-control"
        id="pass"
        placeholder="Password"
        required
      />
      <label for="pass">Password</label>
      <button
        type="button"
        class="toggle-password"
        onclick="togglePasswordVisibility()"
        aria-label="Toggle Password Visibility"
      >
