      </button>
    </div>

    <button type="submit" class="btn mt-4">Let's Go ğŸ˜</button>
  </form>
</div>

<script>
  declare global {
    interface Window {
      togglePasswordVisibility: () => void;
      handleSubmit: () => void;
    }
  }

  // funcion para gestionar la visibiliadad de la contraseÃ±a
  function togglePasswordVisibility() {
    const passwordInput = document.getElementById("pass") as HTMLInputElement;
    const toggleButton = document.querySelector(
      ".toggle-password"
    ) as HTMLElement;

    if (passwordInput) {
      const isPassword = passwordInput.type === "password";
      passwordInput.type =
        passwordInput.type === "password" ? "text" : "password";

      if (toggleButton) {
        toggleButton.innerHTML = isPassword ? "ğŸ™ˆ" : "ğŸ‘ï¸";
      }
    }
  }

  const handleSubmit: () => void = () => {
    const BACKEND_URL = `${import.meta.env.BACKEND_URL || "http://127.0.0.1:3001"}`;
    const form = document.getElementById("login-form") as HTMLFormElement;

    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      const username = (document.getElementById("username") as HTMLInputElement)
        .value;
      const password = (document.getElementById("pass") as HTMLInputElement)
        .value;
      try {
        const response = await fetch(`${BACKEND_URL}/login`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ username, password }),
        });

        if (response.ok) {
          const data = await response.json();
          console.log("Bienvenido Astronauta! ğŸš€");
          return data;
          window.location.href = "/welcome";
        } else {
          alert("Credenciales incorrectas ğŸ‘");
        }
      } catch (error) {
        console.log("Error de conexiÃ³n con el servidor", error);
      }
    });
  };
  window.togglePasswordVisibility = togglePasswordVisibility;
  window.handleSubmit = handleSubmit;
</script>
